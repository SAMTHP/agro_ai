{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
    <div class="wrapper ">
        <div class="sidebar" data-color="white" data-active-color="danger">
            <div class="logo">
                <a href="{{ path('home') }}" class="simple-text logo-mini">
                <div class="logo-image-small">
                    <i class="nc-icon nc-diamond fa-2x"></i>
                </div>
                <!-- <p>CT</p> -->
                </a>
                <a href="{{ path('home') }}" class="simple-text logo-normal">
                    Agrigora
                </a>
            </div>
            <div class="sidebar-wrapper">
                <ul class="nav">
                    <li class="active ">
                        <a href="{{ path('dashboard') }}">
                        <i class="nc-icon nc-tile-56"></i>
                        <p>Tableau de bord</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-absolute fixed-top navbar-transparent">
                <div class="container-fluid">
                    <div class="navbar-wrapper">
                        <div class="navbar-toggle">
                        <button type="button" class="navbar-toggler">
                            <span class="navbar-toggler-bar bar1"></span>
                            <span class="navbar-toggler-bar bar2"></span>
                            <span class="navbar-toggler-bar bar3"></span>
                        </button>
                        </div>
                        <a class="navbar-brand" href="{{ path('dashboard') }}">Tableau de bord</a>
                    </div>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end" id="navigation">
                        <form>
                        <div class="input-group no-border">
                            <input type="text" value="" class="form-control" placeholder="Recherche...">
                            <div class="input-group-append">
                            <div class="input-group-text">
                                <i class="nc-icon nc-zoom-split"></i>
                            </div>
                            </div>
                        </div>
                        </form>
                        <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link btn-magnify" href="javascript:;">
                            <i class="nc-icon nc-layout-11"></i>
                            <p>
                                <span class="d-lg-none d-md-block">Stats</span>
                            </p>
                            </a>
                        </li>
                        <li class="nav-item btn-rotate dropdown">
                            <a class="nav-link dropdown-toggle" href="http://example.com" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class=" fas fa-user"></i>
                            <p>
                                <span class="d-lg-none d-md-block">Some Actions</span>
                            </p>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item" href="/logout">Se déconnecter</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn-rotate" href="javascript:;">
                            <i class="nc-icon nc-settings-gear-65"></i>
                            <p>
                                <span class="d-lg-none d-md-block">Account</span>
                            </p>
                            </a>
                        </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- End Navbar -->
            <div class="content">
                <div class="row">
                    <div class="col-lg-3 col-md-6 col-sm-6">
                        <div class="card card-stats">
                            <div class="card-body ">
                                <div class="row">
                                <div class="col-5 col-md-4">
                                    <div class="icon-big text-center icon-warning">
                                    <i class="fad fa-users-class text-warning"></i>
                                    </div>
                                </div>
                                <div class="col-7 col-md-8">
                                    <div class="numbers">
                                    <p class="card-category">Groupes</p>
                                    <p class="card-title">7<p>
                                    </div>
                                </div>
                                </div>
                            </div>
                            <div class="card-footer ">
                                <hr>
                                <div class="stats">
                                <i class="fa fa-refresh"></i>
                                    Toutes les heurers
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-6">
                        <div class="card card-stats">
                            <div class="card-body ">
                                <div class="row">
                                <div class="col-5 col-md-4">
                                    <div class="icon-big text-center icon-warning">
                                    <i class="nc-icon nc-money-coins text-success"></i>
                                    </div>
                                </div>
                                <div class="col-7 col-md-8">
                                    <div class="numbers">
                                    <p class="card-category">Revenues</p>
                                    <p class="card-title">$ 1,345<p>
                                    </div>
                                </div>
                                </div>
                            </div>
                            <div class="card-footer ">
                                <hr>
                                <div class="stats">
                                <i class="fa fa-calendar-o"></i>
                                    Hier
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-6">
                        <div class="card card-stats">
                            <div class="card-body ">
                                <div class="row">
                                <div class="col-5 col-md-4">
                                    <div class="icon-big text-center icon-warning">
                                    <i class="nc-icon nc-vector text-danger"></i>
                                    </div>
                                </div>
                                <div class="col-7 col-md-8">
                                    <div class="numbers">
                                    <p class="card-category">Projets</p>
                                    <p class="card-title">23<p>
                                    </div>
                                </div>
                                </div>
                            </div>
                            <div class="card-footer ">
                                <hr>
                                <div class="stats">
                                <i class="fa fa-clock-o"></i>
                                    En cours
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-6">
                        <div class="card card-stats">
                            <div class="card-body ">
                                <div class="row">
                                <div class="col-5 col-md-4">
                                    <div class="icon-big text-center icon-warning">
                                    <i class="nc-icon nc-favourite-28 text-primary"></i>
                                    </div>
                                </div>
                                <div class="col-7 col-md-8">
                                    <div class="numbers">
                                    <p class="card-category">Adhérents</p>
                                    <p class="card-title">+45K<p>
                                    </div>
                                </div>
                                </div>
                            </div>
                            <div class="card-footer ">
                                <hr>
                                <div class="stats">
                                <i class="fa fa-refresh"></i>
                                    Toutes les heurers
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="card ">
                            <div class="card-header ">
                                <h5 class="card-title">Productions : Patates en Occitanie - 2020</h5>
                                <p class="card-category">24 Heures performance</p>
                            </div>
                            <div class="card-body ">
                                <canvas id=chartHours width="400" height="100"></canvas>
                            </div>
                            <div class="card-footer ">
                                <hr>
                                <div class="stats">
                                <i class="fa fa-history"></i> Mis à jour il y'a 3 minutes
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="card card-chart">
                            <div class="card-header">
                                <h5 class="card-title text-center">Prévoir sa production</h5>
                                <p class="card-category text-center">Prévisions estimées en temps réel par notre IA</p>
                            </div>
                            <div class="card-body">
                                {# Graph ici #}
                                
                                <div class="row d-flex justify-content-center">
                                    <div class="col-lg-6">
                                        <form id="generatePrediction" class="shadow p-3 card border-0 bg-success text-white">
                                            <h6 class="waiting-msg text-white text-center mt-2">Formulaires</h6>
                                            <div class="form-group">
                                                <label for="exampleFormControlSelect1" class="text-white font-weight-bold">Ville</label>
                                                <select class="form-control" id="cityInput">
                                                    {% for city in cities %}
                                                        <option value="{{ city.localityName }}">{{ city.localityName }}</option>
                                                    {% endfor %}
                                                    {% for city in cities %}
                                                        <input type="hidden" name="" id="{{ city.localityName }}-population" value={{ city.population }}>
                                                        <input type="hidden" name="" id="{{ city.localityName }}-climat" value={{ city.climat.label }}>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label for="exampleFormControlSelect1" class="text-white font-weight-bold">Plante</label>
                                                <select class="form-control" id="plantInput">
                                                    {% for plant in plants %}
                                                        <option value="{{ plant.name }}">{{ plant.name }}</option>
                                                    {% endfor %}
                                                    {# {% for plant in plants %}
                                                        <input type="hidden" name="" id="{{ plant.name }}-climatp" value={{ plant.climats|json_encode }}>
                                                    {% endfor %} #}
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label for="exampleFormControlSelect1" class="text-white font-weight-bold">Années</label>
                                                <select class="form-control" id="yearInput">
                                                    <option value="2021-01-01T00:00:00+00:00">2021</option>
                                                    <option value="2022-01-01T00:00:00+00:00">2022</option>
                                                    <option value="2023-01-01T00:00:00+00:00">2023</option>
                                                </select>
                                            </div>
                                        </form>
                                    </div>
                                    
                                    <div class="col-lg-6" style="diplay: none" id="spinnerIa">
                                        <div class="d-flex justify-content-center">
                                            <div class="card border-0 shadow col-12" >
                                                <h6 class="initialization-msg text-muted text-center mt-4">Initialisation de l'IA en cours</h6>
                                                <div class="d-flex justify-content-center mb-3">
                                                    <div id="contentPrevision">
                                                        <img src="/img/spinner_ia.gif" style="width: 128px" alt="" id="imgSpinnerIa">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="">
                                    <button class=" btn btn-block btn-lg btn-warning shadow" id="generateProductionBtn">Générer prévision</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <footer class="footer footer-black  footer-white ">
                <div class="container-fluid">
                    <div class="row">
                        
                        <div class="credits ml-auto">
                            <span class="copyright">
                                © <script>
                                document.write(new Date().getFullYear());
                                </script>, made with <i class="fa fa-heart heart"></i> by Agrogivor
                            </span>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.rawgit.com/BrainJS/brain.js/45ce6ffc/browser.js"></script>
    <script src="/js/ia.js"></script>
{% endblock %}